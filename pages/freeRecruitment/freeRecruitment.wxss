/* pages/freeRecruitment/freeRecruitment.wxss */
page {
  background-color: #e7e7e75d;
}

.custom-navbar {
  --td-navbar-color: #266bdf;
  --td-navbar-bg-color: #fff;
}

.custom-tabs {
  margin-bottom: 20rpx;
}

.group {
  margin: 10rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

/* 发布 */
.v1{
    display:flex;
    flex-direction: row;
    justify-content:space-between;
    background-color: #fff;
    padding:10rpx;
    font-size:35rpx;
    font-weight:60rpx;
  }
  

/* 分割线 */
.divLine {
  background: #e4e4e4;
  width: 100%;
  height: 5rpx;
}

.item {
  margin: 10rpx;
  padding: 10px 30px;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  position: relative;
}

.title {
  font-size: 40rpx;
  color: #266bdf;
  font-weight:600;
  margin-bottom: 5rpx;
  position: relative;
  /* left: 10rpx;
  top: 15rpx; */
}

.info {
  font-size: 27rpx;
  color: #777;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  position: relative;
  width:80%;
  /* left: 10rpx;
  top: 20rpx; */
}

.address {
  /* font-size: 24rpx;
  color: #4d4d4d;
  text-align: right;
  position: relative;
  width:80%; */
  font-size: 25rpx;
  color: #4d4d4d;
  padding-bottom: 5rpx;
  position: relative;
  width:100%;
}

.salary {
  font-size: 40rpx;
  font-weight: 200rpx;
  position: absolute;
  right: 0;
  margin-right: 35rpx;
  top: 40%;
}